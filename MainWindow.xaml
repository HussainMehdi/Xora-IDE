                <MenuItem Header="Paste" />
                <MenuItem Header="Cycle Clipboard Ring" />
                <MenuItem Header=" Find and Replace" >
                    <MenuItem Header="Quick Find"/>
                    <MenuItem Header="Quick Replace"/>
                    <MenuItem Header="Find in Files"/>
